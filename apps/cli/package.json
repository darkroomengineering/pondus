{
  "name": "@pondus/cli",
  "version": "1.0.1",
  "description": "GitHub organization metrics CLI",
  "type": "module",
  "bin": {
    "pondus": "dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --minify",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@pondus/core": "workspace:*",
    "commander": "^14.0.2",
    "ora": "^9.0.0",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.8"
  },
  "keywords": [
    "github",
    "organization",
    "metrics",
    "cli",
    "darkroom"
  ],
  "author": "Darkroom Engineering <hi@darkroom.engineering>",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist"
  ]
}
